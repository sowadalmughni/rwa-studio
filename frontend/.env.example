# RWA-Studio Frontend Environment Variables
# Copy this file to .env and update values for your environment
#
# SECURITY: Never commit .env to version control!
# All frontend env vars must start with VITE_ to be accessible

# ============================================
# API CONFIGURATION
# ============================================

# Backend API URL
VITE_API_URL=http://localhost:5000/api

# Frontend app URL (for OAuth callbacks, etc.)
VITE_APP_URL=http://localhost:5173

# ============================================
# WALLET CONNECT (REQUIRED)
# ============================================
# Get your FREE project ID from https://cloud.walletconnect.com
# This is REQUIRED for wallet connections to work!

VITE_WALLETCONNECT_PROJECT_ID=

# ============================================
# BLOCKCHAIN
# ============================================

# Default chain ID
# 1 = Ethereum Mainnet
# 11155111 = Sepolia Testnet
# 137 = Polygon Mainnet
VITE_DEFAULT_CHAIN_ID=11155111

# Optional: Alchemy API Key for enhanced provider
VITE_ALCHEMY_API_KEY=

# Optional: Infura API Key
VITE_INFURA_API_KEY=

# ============================================
# STRIPE (Public Key Only)
# ============================================
# Only include the PUBLISHABLE key here - never the secret key!

VITE_STRIPE_PUBLISHABLE_KEY=

# ============================================
# ANALYTICS (Optional)
# ============================================

# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# Mixpanel Token
VITE_MIXPANEL_TOKEN=

# ============================================
# FEATURE FLAGS
# ============================================

# Enable testnet networks in wallet selector
VITE_ENABLE_TESTNET=true

# Enable debug mode (console logging)
VITE_ENABLE_DEBUG_MODE=false
