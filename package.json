{
  "name": "rwa-studio",
  "version": "1.0.0",
  "description": "Tokenize Real-World Assets in 5 Clicks",
  "author": "Sowad Al-Mughni <sowadalmughni@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && python src/main.py",
    "dev:contracts": "cd smart-contracts && npx hardhat node",
    "build": "npm run build:frontend && npm run build:contracts",
    "build:frontend": "cd frontend && pnpm run build",
    "build:contracts": "cd smart-contracts && npx hardhat compile",
    "test": "npm run test:contracts",
    "test:contracts": "cd smart-contracts && npx hardhat test",
    "test:backend": "cd backend && pytest tests/ -v",
    "lint": "npm run lint:frontend && npm run lint:e2e && npm run lint:contracts",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:e2e": "cd e2e && npm run lint",
    "lint:contracts": "cd smart-contracts && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "install:all": "cd frontend && pnpm install && cd ../smart-contracts && npm install && cd ../e2e && npm install && cd ../backend && pip install -r requirements.txt",
    "clean": "rimraf node_modules frontend/node_modules smart-contracts/node_modules e2e/node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sowadalmughni/rwa-studio.git"
  },
  "keywords": [
    "rwa",
    "tokenization",
    "erc-3643",
    "defi",
    "compliance",
    "securities",
    "blockchain",
    "ethereum",
    "real-world-assets"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
